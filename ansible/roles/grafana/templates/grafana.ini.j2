# Grafana configuration
# Generated by Ansible - do not edit manually

[paths]
data = {{ grafana_data_dir }}
logs = {{ grafana_log_dir }}
plugins = {{ grafana_data_dir }}/plugins
provisioning = {{ grafana_provisioning_dir }}

[server]
http_addr = {{ grafana_http_addr }}
http_port = {{ grafana_http_port }}
root_url = %(protocol)s://%(domain)s:%(http_port)s/

[database]
type = sqlite3
path = {{ grafana_data_dir }}/grafana.db

[session]
provider = file
provider_config = sessions

[analytics]
reporting_enabled = false
check_for_updates = false
check_for_plugin_updates = false

[security]
# Admin user/password set on first login via web UI
disable_initial_admin_creation = false
allow_embedding = {{ grafana_allow_embedding | lower }}

[users]
allow_sign_up = false
allow_org_create = false
auto_assign_org = true
auto_assign_org_role = Viewer

[auth.anonymous]
enabled = {{ grafana_anonymous_enabled | lower }}

[log]
mode = {{ grafana_log_mode }}
level = {{ grafana_log_level }}

[log.file]
log_rotate = true
max_lines = 1000000
max_size_shift = 28
daily_rotate = true
max_days = 7

[alerting]
enabled = true

[unified_alerting]
enabled = true

[feature_toggles]
enable =
