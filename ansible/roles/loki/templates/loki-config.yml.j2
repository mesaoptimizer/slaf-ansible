# Loki single-binary mode configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

auth_enabled: false

server:
  http_listen_port: {{ loki_http_port }}
  grpc_listen_port: {{ loki_grpc_port }}
  log_format: json

common:
  path_prefix: "{{ loki_data_dir }}"
  replication_factor: 1
  ring:
    kvstore:
      store: inmemory
  storage:
    s3:
      bucketnames: "{{ loki_s3_bucket }}"
      endpoint: "{{ s3_endpoint }}"
      region: "{{ s3_region }}"
      access_key_id: "{{ loki_s3_access_key }}"
      secret_access_key: "{{ loki_s3_secret_key }}"
      insecure: {{ s3_insecure | default(false) | lower }}
      {% if s3_skip_verify | default(false) -%}
      http_config:
        insecure_skip_verify: {{ s3_skip_verify | lower }}
      {% endif %}

schema_config:
  configs:
    - from: 2024-01-01
      store: tsdb
      object_store: s3
      schema: v13
      index:
        prefix: loki_index_
        period: 24h

storage_config:
  tsdb_shipper:
    active_index_directory: "{{ loki_index_dir }}"
    cache_location: "{{ loki_cache_dir }}"
  aws:
    bucketnames: "{{ loki_s3_bucket }}"
    endpoint: "{{ s3_endpoint }}"
    access_key_id: "{{ loki_s3_access_key }}"
    secret_access_key: "{{ loki_s3_secret_key }}"
    s3forcepathstyle: {{ loki_s3_force_path_style | default(true) | lower }}
    insecure: {{ s3_insecure | default(false) | lower }}
    {% if s3_skip_verify | default(false) -%}
    http_config:
      insecure_skip_verify: {{ s3_skip_verify | lower }}
    {% endif %}

ingester:
  wal:
    enabled: true
    dir: "{{ loki_wal_dir }}"

compactor:
  working_directory: "{{ loki_compactor_dir }}"
  retention_enabled: true
  delete-request-store: s3

limits_config:
  retention_period: "{{ loki_retention_hours }}h"
